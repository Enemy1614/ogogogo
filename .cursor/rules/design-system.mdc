            "borderRadius": "8px",
            "padding": "10px 18px",
            "fontSize": "14px",
            "fontWeight": "500",
            "minHeight": "40px",
            "states": {
              "hover": { "backgroundColor": "#262626" },
              "active": { "backgroundColor": "#262626", "transform": "scale(0.98)" },
              "disabled": { "backgroundColor": "#F5F5F5", "color": "#A3A3A3" },
              "focus": { "boxShadow": "0 0 0 3px rgba(10, 10, 10, 0.2)" }
            }
          },
          "secondary": {
            "backgroundColor": "#E5E5E5",
            "color": "#262626",
            "border": "none",
            "borderRadius": "8px",
            "padding": "10px 18px",
            "fontSize": "14px",
            "fontWeight": "500",
            "minHeight": "40px",
            "states": {
              "hover": { "backgroundColor": "#D4D4D4" },
              "active": { "backgroundColor": "#A3A3A3" },
              "disabled": { "backgroundColor": "#F5F5F5", "color": "#A3A3A3" },
              "focus": { "boxShadow": "0 0 0 3px rgba(200, 200, 200, 0.5)" }
            }
          },
          "outline": {
            "backgroundColor": "#FFFFFF",
            "color": "#404040",
            "border": "1px solid #D4D4D4",
            "borderRadius": "8px",
            "padding": "9px 17px",
            "fontSize": "14px",
            "fontWeight": "500",
            "minHeight": "40px",
            "states": {
              "hover": { "backgroundColor": "#FAFAFA", "borderColor": "#A3A3A3" },
              "active": { "backgroundColor": "#F5F5F5" },
              "disabled": { "backgroundColor": "#FAFAFA", "color": "#A3A3A3", "borderColor": "#E5E5E5" },
              "focus": { "boxShadow": "0 0 0 3px rgba(200, 200, 200, 0.5)", "borderColor": "#A3A3A3" }
            }
          }
        },
        "sizes": {
          "sm": { "padding": "6px 12px", "fontSize": "12px", "minHeight": "32px" },
          "md": { "padding": "10px 18px", "fontSize": "14px", "minHeight": "40px" },
          "lg": { "padding": "12px 24px", "fontSize": "16px", "minHeight": "48px" }
        }
      },
      "input": {
        "base": {
          "backgroundColor": "#FFFFFF",
          "border": "1px solid #D4D4D4",
          "borderRadius": "8px",
          "padding": "10px 12px",
          "fontSize": "14px",
          "color": "#262626",
          "placeholder": {
            "color": "#A3A3A3",
            "opacity": "1"
          },
          "states": {
            "focus": { "borderColor": "#737373", "boxShadow": "0 0 0 3px rgba(163, 163, 163, 0.2)" },
            "error": { "borderColor": "#EF4444", "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.2)" },
            "disabled": { "backgroundColor": "#F5F5F5", "color": "#A3A3A3" }
          }
        }
      },
      "card": {
        "base": {
          "backgroundColor": "#FFFFFF",
          "border": "1px solid #E5E5E5",
          "borderRadius": "12px",
          "padding": "24px",
          "boxShadow": "0 1px 2px 0 rgb(0 0 0 / 0.05)"
        },
        "pricingCard": {
            "backgroundColor": "#FFFFFF",
            "border": "1px solid #E5E5E5",
            "borderRadius": "16px",
            "padding": "32px",
            "boxShadow": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)"
        },
        "pricingCardHighlighted": {
            "backgroundColor": "#0A0A0A",
            "border": "1px solid #404040",
            "borderRadius": "16px",
            "padding": "32px",
            "boxShadow": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
        }
      },
      "navbar": {
        "backgroundColor": "#FFFFFF",
        "height": "64px",
        "padding": "0 32px",
        "borderBottom": "1px solid #E5E5E5",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "navLink": {
            "color": "#737373",
            "fontSize": "14px",
            "fontWeight": "500",
            "padding": "8px 12px",
            "borderRadius": "6px",
            "states": {
                "hover": {"backgroundColor": "#F5F5F5", "color": "#262626"},
                "active": {"color": "#171717"}
            }
        }
      },
      "sidebar": {
        "backgroundColor": "#FFFFFF",
        "width": "340px",
        "padding": "24px",
        "borderRight": "1px solid #E5E5E5",
        "display": "flex",
        "flexDirection": "column",
        "gap": "24px"
      }
    },
    "layout": {
      "grid": {
        "columns": "12",
        "gap": "24px",
        "maxWidth": "1440px"
      },
      "containers": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "animations": {
      "transitions": {
        "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "normal": "250ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "400ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "commonEffects": [
        "transform",
        "background-color",
        "border-color",
        "box-shadow",
        "opacity"
      ]
    },
    "iconography": {
      "style": "outline",
      "strokeWidth": "1.5px",
      "defaultSize": "20px",
      "colors": {
        "primary": "#404040",
        "secondary": "#737373"
      }
    },
