        "button": {
          "color": "#525252",
          "backgroundColor": "transparent",
          "borderRadius": "9999px",
          "padding": "6px 16px",
          "fontSize": "14px",
          "fontWeight": "500"
        },
        "activeButton": {
          "color": "#171717",
          "backgroundColor": "#FFFFFF",
          "boxShadow": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)"
        }
      },
      "tag": {
        "base": {
          "borderRadius": "4px",
          "padding": "2px 8px",
          "fontSize": "12px",
          "fontWeight": "500"
        },
        "green": {
          "backgroundColor": "#ECFDF5",
          "color": "#059669"
        },
        "gray": {
          "backgroundColor": "#F5F5F5",
          "color": "#525252"
        }
      },
      "avatar": {
          "size": "32px",
          "borderRadius": "9999px",
          "border": "2px solid #FFFFFF",
          "boxShadow": "0 0 0 1px #E5E5E5"
      },
      "calendar": {
        "cell": {
            "border": "1px solid #E5E5E5"
        },
        "todayButton": {
            "backgroundColor": "#FFFFFF",
            "border": "1px solid #D4D4D4",
            "borderRadius": "6px",
            "padding": "6px 12px"
        }
      }
    }
  }
